<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance" parent="@miui:style/TextAppearance" />
    <style name="TextAppearance.Editor" parent="@style/TextAppearance">
        <item name="android:textColor">@color/editor_text</item>
        <item name="android:textColorLink">@color/link_text</item>
    </style>
    <style name="TextAppearance.Editor.Info" parent="@style/TextAppearance.Editor">
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextAppearance.Title" parent="@miui:style/TextAppearance.WindowTitle" />
    <style name="TextAppearance.Title.Large" parent="@miui:style/TextAppearance.WindowTitle">
        <item name="android:textColor">@color/title_primary_text_light</item>
    </style>
    <style name="TextAppearance.Title.Large.Subtitle" parent="@miui:style/TextAppearance.WindowTitle.Subtitle" />
    <style name="TextAppearance.List.Primary" parent="@miui:style/TextAppearance.Widget.List.Primary">
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextAppearance.List.Secondary" parent="@miui:style/TextAppearance.Widget.List.Secondary">
        <item name="android:textSize">13.0sp</item>
    </style>
    <style name="TextAppearance.Header" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/header_text_dark</item>
    </style>
    <style name="TextAppearance.Sns.Subject" parent="@style/TextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#cc000000</item>
        <item name="android:textColorHint">#4d000000</item>
    </style>
    <style name="TextAppearance.Sns.Description" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/sns_description_font_size</item>
        <item name="android:textColor">#4d000000</item>
    </style>
    <style name="TextAppearance.Widget.Title" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/widget_title_text_size</item>
        <item name="android:textColor">@color/title_primary_text_light</item>
    </style>
    <style name="TextAppearance.Widget.Snippet" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/widget_text_size</item>
        <item name="android:textColor">@color/editor_text</item>
    </style>
    <style name="None" />
    <style name="TextAppearance.HighLight" parent="@style/None">
        <item name="android:textColor">@color/user_query_highlight</item>
    </style>
    <style name="TextAppearance.Toggle" parent="@style/TextAppearance">
        <item name="android:textColor">@color/toggle_style_text</item>
        <item name="android:shadowRadius">0.0</item>
    </style>
    <style name="Widget" />
    <style name="Widget.ListView.Item.SingleLine" parent="@miui:style/Widget.ListView.Item.DoubleLine" />
    <style name="Widget.ListView.Item.DoubleLine" parent="@style/Widget.ListView.Item.SingleLine" />
    <style name="Widget.ListView.Item.ColorBar" parent="@miui:style/Widget.ListView.Item.Immersion" />
    <style name="Widget.Sns.Subject" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Sns.Subject</item>
        <item name="android:background">@null</item>
    </style>
    <style name="Widget.Sns.Description" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Sns.Description</item>
    </style>
    <style name="ActionBar.Root" parent="@miui:style/Widget.ActionBar">
        <item name="android:displayOptions">showTitle</item>
    </style>
    <style name="ActionBar.List" parent="@miui:style/Widget.ActionBar">
        <item name="android:displayOptions">showCustom</item>
    </style>
    <style name="ActionBar.Custom" parent="@miui:style/Widget.ActionBar">
        <item name="android:displayOptions">showCustom</item>
    </style>
    <style name="ActionBar.Custom.Editor" parent="@style/ActionBar.Custom">
        <item name="android:height">@dimen/notes_edit_header_height</item>
    </style>
    <style name="ActionBar.Sns" parent="@miui:style/Widget.ActionBar">
        <item name="android:displayOptions">showCustom</item>
    </style>
    <style name="NavigationLayout" parent="@miui:style/Widget.NavigationLayout">
        <item name="miui:portraitNavigationWidth">300.0dip</item>
        <item name="miui:landscapeNavigationWidth">350.0dip</item>
        <item name="miui:drawerEnabledOrientation">portrait|landscape</item>
        <item name="miui:drawerMode">squeezed</item>
    </style>
    <style name="NoteTheme" parent="@miui:style/Theme.Light" />
    <style name="NoteTheme.Root" parent="@miui:style/Theme.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Root</item>
        <item name="miui:navigationLayoutStyle">@style/NavigationLayout</item>
    </style>
    <style name="NoteTheme.List" parent="@miui:style/Theme.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:actionBarStyle">@style/ActionBar.List</item>
    </style>
    <style name="NoteTheme.Edit" parent="@style/NoteTheme">
        <item name="android:windowBackground">@null</item>
        <item name="android:actionBarStyle">@style/ActionBar.Custom.Editor</item>
    </style>
    <style name="NoteTheme.Alarm" parent="@style/NoteTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
    <style name="NoteTheme.Alarm.Tip" parent="@style/NoteTheme.Alarm">
        <item name="android:windowBackground">@color/note_tip_bgcolor</item>
    </style>
    <style name="NoteTheme.Settings" parent="@miui:style/Theme.Light" />
    <style name="NoteTheme.DialogActivity" parent="@miui:style/Theme.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="NoteTheme.Sns" parent="@style/NoteTheme">
        <item name="android:actionBarStyle">@style/ActionBar.Sns</item>
    </style>
</resources>
